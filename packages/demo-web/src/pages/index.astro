---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Body from '../components/Body.astro';
import Footer from '../components/Footer.astro';
import Aside from '../components/Aside.astro';
---

<Layout>
  <header>
    <Header />
  </header>
  <aside>
    <Aside />
  </aside>
  <main>
    <Body />
  </main>
  <footer>
    <Footer />
  </footer>
</Layout>

<style>
  body {
    margin: 0;
    display: grid;
    grid-template-areas:
      'header header header'
      'aside main main'
      'aside main main'
      'footer footer footer';
    grid-template-rows: 60px 1fr 1fr 40px;
    grid-template-columns: 200px 1fr 1fr;
    min-height: 100vh;
  }

  header {
    grid-area: header;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  aside {
    grid-area: aside;
    z-index: 0;
    position: fixed;
    top: 60px;
    left: 0;
    width: 200px;
    height: 100%;
    z-index: 9;
  }

  main {
    grid-area: main;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  footer {
    grid-area: footer;
    text-align: center;
  }

  @media (max-width: 768px) {
    body {
      grid-template-areas:
        'header'
        'main'
        'aside'
        'footer';
      grid-template-rows: 60px 1fr auto 40px;
      grid-template-columns: 1fr;
    }

    aside {
      grid-area: aside;
      position: relative;
      width: 100%;
    }
  }
</style>
