<script>
  const $button = document.querySelector('#menu-toggle');
  let isOpen = false;

  $button?.addEventListener('click', () => {
    isOpen = !isOpen;
    isOpen
      ? $button.classList.add('menu-open')
      : $button.classList.remove('menu-open');

    $button?.dispatchEvent(
      new CustomEvent('open-menu', {
        bubbles: true,
        composed: true,
        detail: { isOpen },
      })
    );
  });
</script>

