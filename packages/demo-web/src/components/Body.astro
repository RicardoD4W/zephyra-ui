---
import GetStarted from '../components/GetStarted.astro';
import ZComponent from '../components/ZComponent.astro';
import CSSCustom from '../components/CSSCustom.astro';
import ContentLayout from '../layouts/ContentLayout.astro';

import componentList from '../data/componentList.json';
import cssCustomList from '../data/cssCustomList.json';
---

<ContentLayout>
  <GetStarted />

  <section>
    <article class='section'>
      <h2
        class='title'
        id='components'
      >
        Components
      </h2>

      {
        componentList.map(({ title, description, args }) => (
          <ZComponent
            title={title}
            description={description}
            args={args}
          />
        ))
      }
      <hr />
    </article>

    <article>
      <h2
        class='title'
        id='css-custom'
      >
        CSS Custom Properties
      </h2>
      <CSSCustom cssCustomList={cssCustomList} />
      <hr />
    </article>
  </section>
</ContentLayout>

<style>
  .section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  article {
    margin-bottom: 80px;
  }

  .title {
    padding-top: 80px;
  }
</style>
