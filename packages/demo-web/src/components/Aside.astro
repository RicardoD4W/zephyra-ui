---
import componentList from '../data/componentList.json';
import cssCustomList from '../data/cssCustomList.json';
---

<aside>
  <details open>
    <summary> Get Started </summary>
    <nav>
      <a href='/usage'> How to use</a>
    </nav>
  </details>

  <details open>
    <summary>Components</summary>
    <nav>
      <ul>
        {
          componentList.map(({ title }) => (
            <li>
              <a href={`/components/${title}`}>{title}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </details>

  <details open>
    <summary>CSS Custom</summary>
    <nav>
      <ul>
        {
          cssCustomList.map(({ title }) => (
            <li>
              <a href={`/css-custom/${title}`}>{title}</a>
            </li>
          ))
        }
      </ul>
    </nav>
  </details>
</aside>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    function highlight(element: HTMLAnchorElement) {
      const links = document.querySelectorAll('a');
      links.forEach((link) => link.classList.remove('selected'));

      element.classList.add('selected');
    }

    const links = document.querySelectorAll('a');
    links.forEach((link) => {
      link.addEventListener('click', function () {
        highlight(this);
      });
    });
  });
</script>

<style>
  aside {
    border-radius: 8px;
    max-width: 300px;
    margin-inline: 15px;
    margin-top: 25px;
  }

  details {
    border-radius: 5px;
    margin-bottom: 1rem;
    padding: 5px;
  }

  summary {
    font-weight: bold;
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 5px;
  }

  nav {
    padding-left: 1rem;
  }

  ul {
    list-style-type: none;
    padding-left: 0;
  }

  li {
    margin: 0.25rem 0;
  }

  a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--hover-color);
  }

  a.selected {
    color: var(--hover-color);
    font-weight: bold;
    padding: 0.25rem;
    border-radius: 5px;
  }
</style>
