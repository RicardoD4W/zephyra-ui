<div>
  <script>
    import '@zephyra-ui/z-button';
    import '@zephyra-ui/z-alert';
    import '@zephyra-ui/z-icon';
    import '@zephyra-ui/z-toggle-theme';
    import '@zephyra-ui/z-color';
  </script>
  <div class='slot'>
    <slot />
  </div>
</div>

<script>
  window.addEventListener('z-theme:changed', (e: CustomEvent) => {
    const theme = e.detail.dataTheme as string;

    localStorage.setItem('theme', theme);
  });
</script>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const theme = localStorage.getItem('theme') || 'light';
    window.dispatchEvent(
      new CustomEvent('z-theme:changed', { detail: { dataTheme: theme } })
    );

    document.documentElement.setAttribute('data-theme', theme);
  });
</script>

<style>
  .slot {
    width: 100%;
    height: 100%;

    padding: 20px;

    overflow: hidden;
  }
</style>
