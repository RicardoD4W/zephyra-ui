---
import ContentLayout from '../../layouts/ContentLayout.astro';
import MainLayout from '../../layouts/MainLayout.astro';
import { Code } from 'astro-expressive-code/components';
---

<MainLayout>
  <ContentLayout>
    <h2>z-icon</h2>

    <div class='info'>
      <article class='info-content'>
        <h3>Properties:</h3>
        <section class='prop'>
          <details open>
            <summary>icon</summary>
            <div class='prop-info'>
              <p>
                The <code>icon</code> property determines the current icon, Default
                is "info"
              </p>
              <ul>
                <li>
                  <div class='highlight'>
                    <Code
                      wrap
                      code='<z-icon icon="info"></z-icon>\n<z-icon icon="warning"></z-icon>\n<z-icon icon="success"></z-icon>\n<z-icon icon="error"></z-icon>'
                      lang='html'
                    />

                    <div class='wc'>
                      <z-icon icon='info'></z-icon>
                      <z-icon icon='warning'></z-icon>
                      <z-icon icon='success'></z-icon>
                      <z-icon icon='error'></z-icon>
                    </div>
                  </div>
                </li>
              </ul>
            </div>

            <div class='prop-info'>
              <p>
                You can use too with the model if you are in <code>js</code>, <code
                  >jsx</code
                >,
                <code>ts</code> or
                <code>tsx</code>.
              </p>
              <ul>
                <li>
                  <div class='highlight'>
                    <Code
                      wrap
                      code='import { IconModel } from "@zephyra-ui/z-icon";\n\ndocument.body.innerHTML+=`\n<z-icon icon=${IconModel.INFO}></z-icon>\n<z-icon icon=${IconModel.WARNING}></z-icon>\n<z-icon icon=${IconModel.SUCCESS}></z-icon>\n<z-icon icon=${IconModel.ERROR}></z-icon>`'
                      lang='js'
                    />

                    <div class='wc'>
                      <z-icon icon='info'></z-icon>
                      <z-icon icon='warning'></z-icon>
                      <z-icon icon='success'></z-icon>
                      <z-icon icon='error'></z-icon>
                    </div>
                  </div>
                </li>
              </ul>
            </div>
          </details>
        </section>
      </article>

      <article class='info-content'>
        <h3>Custom Events:</h3>
        <section class='prop'>none</section>
      </article>
    </div>
  </ContentLayout>

  <style>
    h2 {
      margin-bottom: 15px;
      text-align: center;
    }

    .info {
      width: 100%;
      height: 100%;

      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    .info-content {
      background-color: var(--aside-bg);
      border-radius: 5px;
      padding: 20px;
    }

    .highlight {
      margin: 10px;
      max-width: max-content;
      gap: 20px;
      display: flex;
      flex-direction: column;
    }

    .wc {
      display: flex;
      flex-wrap: wrap;
      gap: 5px;
    }

    summary {
      font-weight: bold;
      font-size: medium;
      text-decoration: underline;
    }

    p {
      text-wrap: balance;
      font-size: 16px;
      line-height: 1.6;
      word-spacing: 0.05em;
    }

    li {
      text-wrap: balance;
      list-style: none;
      margin-block: 10px;
    }

    section.prop {
      margin-top: 15px;
    }

    .prop-info {
      margin-block: 25px;
    }

    code {
      padding: 5px;
      margin: 5px;
      background-color: var(--code-bg-color);
      border-radius: 5px;
    }
  </style>
</MainLayout>
