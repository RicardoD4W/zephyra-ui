{
  "name": "@zephyra-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "packages/components/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev-c": "npm run dev --workspace=packages/components",
    "dev-d": "npm run dev --workspace=packages/docs",
    "dev-p": "npm run dev --workspace=packages/demo-web",
    "build-all": "powershell -Command \"Get-ChildItem -Path ./packages/components -Directory | ForEach-Object {cd $_.FullName; npm i; npm run build; cd ../..}\"",
    "dev-web": "npm run build-all && npm run dev-p"
  },
  "dependencies": {
    "lit": "3.2.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "eslint-plugin-storybook": "^0.11.1",
    "typescript": "^5.6.2",
    "vite": "^6.0.5"
  }
}