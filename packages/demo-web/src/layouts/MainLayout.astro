---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Aside from '../components/Aside.astro';
import Pagination from '../components/Pagination.astro';
---

<script>
  const $header = document.querySelector('.header');
  const $aside = document.querySelector('.aside') as HTMLElement;

  $header?.addEventListener(
    'open-menu',
    (e: CustomEvent<{ isOpen: boolean }>) => {
      const isOpen = e.detail.isOpen as unknown as boolean;

      if (isOpen) {
        $aside.style.transform = 'translateX(0%)';
      } else {
        $aside.style.transform = 'translateX(-100%)';
      }
    }
  );
</script>

<Layout>
  <header class='header'>
    <Header />
  </header>
  <aside class='aside'>
    <Aside />
  </aside>
  <main>
    <slot />
  </main>
  <footer>
    <Pagination />
  </footer>
</Layout>

<style>
  body {
    margin: 0;
    display: grid;
    grid-template-areas:
      'header header header'
      'aside main main'
      'aside main main'
      'footer footer footer';
    grid-template-rows: 7% 1fr 1fr 6%;
    grid-template-columns: 15% 1fr 1fr;

    min-height: 100vh;
    max-height: 100vh;
  }

  header {
    grid-area: header;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .aside {
    grid-area: aside;

    z-index: 9;

    max-width: 100%;
    height: 100%;

    scrollbar-gutter: stable;
    overflow-y: scroll;
  }
  .aside::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    background-color: var(--aside-bg);
  }

  .aside::-webkit-scrollbar {
    width: 1px;
    background-color: var(--aside-bg);
  }

  .aside::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    background-color: var(--text-s-color);
  }

  main {
    grid-area: main;

    width: 100%;
    height: 100%;

    scrollbar-gutter: stable;
    overflow-y: scroll;
  }

  main::-webkit-scrollbar-track {
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    background-color: var(--main-bg);
  }

  main::-webkit-scrollbar {
    width: 1px;
    background-color: var(--main-bg);
  }

  main::-webkit-scrollbar-thumb {
    border-radius: 10px;
    -webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
    background-color: var(--text-s-color);
  }

  footer {
    grid-area: footer;
    z-index: 10;
  }

  @media (max-width: 768px) {
    body {
      grid-template-areas:
        'header'
        'main'
        'footer';
      grid-template-rows: 7% 1fr 6%;
      grid-template-columns: 1fr;
    }

    header {
    }
    main {
    }
    footer {
    }
    .aside {
      display: none;
    }
  }

  @media (max-width: 500px) {
    body {
      grid-template-areas:
        'header'
        'main'
        'footer';
      grid-template-rows: 7% 1fr 6%;
      grid-template-columns: 1fr;
    }

    header {
    }
    main {
    }
    footer {
    }
    .aside {
      display: none;
    }
  }
</style>
