---
import componentList from '../data/componentList.json';
import cssCustomList from '../data/cssCustomList.json';

const url = new URL(Astro.request.url);
const refHighlight = url.pathname.split('/').at(-1);
---

<aside>
  <details open>
    <summary> Get Started </summary>
    <nav>
      <a href='/usage'> How to use</a>
    </nav>
  </details>

  <details open>
    <summary>Components</summary>
    <nav>
      <ul>
        {
          componentList.map(({ title }) => (
            <li>
              <a
                class={refHighlight === title ? 'selected' : ''}
                href={`/components/${title}`}
              >
                {title}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </details>

  <details open>
    <summary>CSS Custom</summary>
    <nav>
      <ul>
        {
          cssCustomList.map(({ title }) => (
            <li>
              <a
                class={refHighlight === title ? 'selected' : ''}
                href={`/css-custom/${title}`}
              >
                {title}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </details>
</aside>

<style>
  @media (max-width: 950px) {
    aside {
      font-size: x-small;
    }
  }

  aside {
    padding: 15px;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  summary {
    font-weight: bold;
    cursor: pointer;
    border-radius: 5px;
  }

  nav {
    padding-left: 1rem;
  }

  ul {
    list-style-type: none;
    padding-left: 0;
  }

  a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  a:hover {
    color: var(--hover-color);
  }

  a.selected {
    color: var(--hover-color);
    font-weight: bold;
    padding: 0.25rem;
    border-radius: 5px;
  }
</style>
