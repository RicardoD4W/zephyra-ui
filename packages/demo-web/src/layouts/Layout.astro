<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/webp'
      href='/images/z-logo.webp'
    />
    <link
      rel='stylesheet'
      href='/global.css'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>Zephyra UI</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<script>
  function applyTheme() {
    const storedTheme = localStorage.getItem('theme');
    document.documentElement.setAttribute(
      'data-theme',
      storedTheme === 'light' ? 'light' : 'dark'
    );
  }

  applyTheme();
</script>

<style is:global>
  :root {
    box-sizing: border-box;
  }

  *,
  *::before,
  *::after {
    box-sizing: inherit;
    margin: 0;
    padding: 0;
  }

  html {
    font-size: 16px;
    line-height: 1.5;
    scroll-behavior: smooth;
    color-scheme: light dark;
  }

  body {
    margin: 0;
    font-family: system-ui, sans-serif;
  }
</style>
